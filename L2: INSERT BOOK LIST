
/** FAVORITE BOOK LIST    SUMMARY:  1. CREATE TABLE OF FAVORITE BOOKS WITH PRIMARY KEY, name and Rating.
                                    2. INSERT MORE DATA INTO TABLE.
                                    3. UTILIZE SELECT TO DISPLAY BOOKLIST.

SELECT name queries single from table
SELECT * queries all from table

**/

CREATE TABLE bookfavs (id INTEGER PRIMARY KEY, name TEXT, five_STAR_RATING INTEGER);

INSERT INTO bookfavs VALUES (1, "Life Of Pi",        5);
INSERT INTO bookfavs VALUES (2, "Siddartha",         5);
INSERT INTO bookfavs VALUES (3, "Jurassic Park",     5);
INSERT INTO bookfavs VALUES (4, "The Sparrow",       5);
INSERT INTO bookfavs VALUES (5, "Mexico City Blues", 5);
INSERT INTO bookfavs VALUES (6, "Be Here Now",       5);
SELECT * FROM bookfavs;

